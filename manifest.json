{
  "name": "E-commerce focus search input",
  "description": "Automatically focus the search input on Amazon.in and Flipkart.com with a keypress.",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.amazon.in/*", "*://www.flipkart.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-32.png",
    "128": "icons/icon-192.png"
  }
}
